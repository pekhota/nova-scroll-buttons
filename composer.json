{
    "name": "pekhota/nova-scroll-buttons",
    "description": "Laravel Nova package providing global floating scroll-to-top and scroll-to-bottom buttons for faster navigation.",
    "keywords": [
        "laravel",
        "nova",
        "nova-package",
        "scroll",
        "buttons",
        "laravel-nova"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "laravel/nova": "^5.0",
        "laravel/nova-devtool": "^1.7"
    },
    "repositories": [
        { "type": "composer", "url": "https://nova.laravel.com" }
    ],
    "autoload": {
        "psr-4": {
            "Pekhota\\NovaScrollButton\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pekhota\\NovaScrollButton\\ToolServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
